<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="viewModel"
            type="com.devrock.beautyappv2.auth.pin.AuthPinViewModel" />
    </data>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <TextView
            android:id="@+id/authHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_regular"
            android:text="@string/header_auth"
            android:textAlignment="center"
            android:textColor="#4E8CC1"
            android:textSize="24sp"
            android:layout_marginTop="110dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/authPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            app:boxStrokeWidth="0.5dp"
            />

        <TextView
            android:id="@+id/authPinInputCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="63dp"
            android:layout_marginEnd="59dp"
            android:fontFamily="@font/segoe_regular"
            android:text="Код из SMS-сообщения"
            android:textAlignment="center"
            android:textSize="12sp" />

        <com.mukesh.OtpView
            android:id="@+id/otp_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:itemBackground="@color/colorPrimary"
            android:textAlignment="center"
            android:textColor="#191919"
            app:cursorColor="#FFFFFF"
            app:hideLineWhenFilled="true"
            app:itemCount="4"
            app:itemHeight="41dp"
            app:itemSpacing="15dp"
            app:itemWidth="28dp"
            app:lineColor="#858585"
            app:viewType="line" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Получить новый код через 30 с"
            android:fontFamily="@font/segoe_regular"
            android:textSize="12sp"
            android:textColor="#858585"
            android:layout_marginTop="27dp"
            android:textAlignment="center" />

    </LinearLayout>
</layout>