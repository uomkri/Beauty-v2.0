<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.devrock.beautyappv2.signup.userpic.UserpicViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Регистрация"
            android:textAlignment="center"
            android:textColor="@color/neutral0"
            android:textSize="34sp"
            android:layout_marginTop="80dp"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:text="Это повысит доверие к вашему профилю"
            android:fontFamily="@font/roboto"
            android:textColor="@color/neutral0"
            android:layout_gravity="center"
            android:layout_marginTop="26dp"
            android:textAlignment="center"
            android:textSize="16sp"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/signupSetAvatar"
            android:src="@drawable/userpic_empty_ph"
            android:layout_gravity="center"
            android:layout_marginTop="34dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/authButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Закончить регистрацию"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginStart="59dp"
            android:layout_marginEnd="59dp"
            android:layout_marginTop="63dp"
            android:height="52dp"
            android:background="@drawable/auth_button"
            />
    </LinearLayout>
</layout>