<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AuthButtonDisabled" parent="Widget.AppCompat.Button.Borderless">
        <item name="cornerRadius">9dp</item>
        <item name="borderWidth">1dp</item>
        <item name="android:textColor">#BDBDBD</item>
    </style>

    <style name="TextInput" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#858585</item>
        <item name="colorControlActivated">#20629B</item>
    </style>


</resources>
